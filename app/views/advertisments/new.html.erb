<%= form_for Advertisment.new do |f| %>
	<div class="row">
		<div class="col-md-6">
			<div class = "form-group">
				<label>Заголовок</label>
				<%= f.text_field :tittle, class: "form-control" %>
				<p class="help-block">Сформулируете кратко основную тему сообщения не более 66 символов</p>
			</div>

			<div class = "form-group">
				<label>Комментарий</label>
				<%= f.text_field :comment, class: "form-control" %>
				<p class="help-block">Максимум символов в сообщении: 10000</p>
			</div>

			<div class = "form-group">
				<label>Цена</label>
				<%= f.text_field :price, class: "form-control" %>
				<p class="help-block">Вы можете указать цену товара или услуги</p>
			</div>

			<div class = "form-group">
				<label>Категория</label>
				<%= f.select :category_id, options_for_select([['Собаки',1],['Кошки',2],['Лошади',3]]), {remote: true} , class: "form-control" %>
				<p class="help-block">Выберите категорию объявления</p>
			</div>

			<div class = "form-group">
				<label>Фото 1</label>
				 <%= f.file_field :image, class: "form-control" %>
				<p class="help-block">Разрешённые типы файлов: jpg, jpeg, png, gif</p>
			</div>

			<div class = "form-group">
				<label>Фото 2</label>
				 <%= f.file_field :image1, class: "form-control" %>
				<p class="help-block">Разрешённые типы файлов: jpg, jpeg, png, gif</p>
			</div>

			<div class = "form-group">
				<label>Фото 3</label>
				 <%= f.file_field :image2, class: "form-control" %>
				<p class="help-block">Разрешённые типы файлов: jpg, jpeg, png, gif</p>
			</div>

			<div class = "form-group">
				<label>Фото 4</label>
				 <%= f.file_field :image3, class: "form-control" %>
				<p class="help-block">Разрешённые типы файлов: jpg, jpeg, png, gif</p>
			</div>
		</div>
	</div>

	<%= f.submit "Отправить", class: "btn btn-success" %>

<% end %>

